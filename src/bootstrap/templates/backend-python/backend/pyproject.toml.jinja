[project]
name = "backend"
version = "0.1.0"
description = "Backend API for {{ project_name }}"
requires-python = ">=3.12"
dependencies = [
    "fastapi>=0.110.0",
    "pydantic>=2.7.0",
    "uvicorn>=0.29.0",
    "sqlalchemy>=2.0.29",
    "alembic>=1.13.1",
    "asyncpg>=0.29.0",
    "python-dotenv>=1.0.1",
    "slowapi>=0.1.9"
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
