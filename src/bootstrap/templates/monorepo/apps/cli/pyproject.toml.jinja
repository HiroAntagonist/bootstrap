[project]
name = "{{ project_name }}-cli"
version = "0.1.0"
description = "Management CLI for {{ project_name }}"
requires-python = ">=3.12"
dependencies = [
    "typer>=0.9.0",
    "httpx>=0.27.0",
    "rich>=13.7.0",
    "{{ project_name_sanitized }}_api",
]

[project.scripts]
"{{ project_name }}-cli" = "cli.main:app"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/cli"]

[tool.uv.sources]
{{ project_name_sanitized }}_api = { workspace = true }
